-- Input fields
-- Pallet Keybind Input
local lastValidKey = "G"

local PalletKeybindInput = KeybindsTab:CreateInput({
   Name = "Pallet",
   CurrentValue = lastValidKey,
   PlaceholderText = "Enter new key",
   RemoveTextAfterFocusLost = false,
   Flag = "PalletInputKeybind1",
   Callback = function(Text)
      if type(Text) == "string" and Text:match("^[A-Za-z0-9]$") then
         lastValidKey = string.upper(Text) 
         PalletKeybind:Set(lastValidKey)
      end
      task.defer(function() 
         PalletKeybindInput:Set(lastValidKey)
      end)
   end,
})

-- Speedy Potion Keybind Input
local SpeedyPotionKeybindInput = KeybindsTab:CreateInput({
   Name = "Speedy Potion",
   CurrentValue = "C",
   PlaceholderText = "Enter new key",
   RemoveTextAfterFocusLost = false,
   Flag = "SpeedyPotionInputKeybind1", -- Unique flag for Speedy Potion keybind input
   Callback = function(Text)
      SpeedyPotionKeybind:Set(Text)
   end,
})

-- AntiG Potion Keybind Input
local AntiGPotionKeybindInput = KeybindsTab:CreateInput({
